
<!DOCTYPE html>
<html ng-app="chatapp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -ChatApp</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/respond.min.js"></script>

    <link href="~/Plugins/Toastr/toaster.min.css" rel="stylesheet" />
    <link href="~/Plugins/Dialog/ngDialog.min.css" rel="stylesheet" />
    <link href="~/Plugins/Dialog/ngDialog-theme-default.min.css" rel="stylesheet" />
 

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.2.1.min.js")"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ChatApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        @RenderBody()
    </div>

  
</body>
</html>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Plugins/Toastr/toaster.min.js"></script>
<script src="~/Scripts/angular-animate.min.js"></script>
<script src="~/Plugins/Dialog/ngDialog.min.js"></script>
<script src="~/Plugins/DesktopNotifications/Notification.js"></script>
<script src="~/Plugins/DesktopNotifications/angular-web-notification.js"></script>
<script src="~/chatapp/directives/ShowNotification.js"></script>
<script src="~/chatapp/directives/ngSlideDown.js"></script>
<script src="~/chatapp/controllers/ChatController.js"></script>
<script src="~/chatapp/chatapp.js"></script>